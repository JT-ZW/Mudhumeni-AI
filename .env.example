# MongoDB Connection
# For local MongoDB
MONGODB_URI=mongodb://localhost:27017/

# For MongoDB Atlas
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/mudhumeni_db?retryWrites=true&w=majority
# Replace <username>, <password>, and <cluster> with your actual MongoDB Atlas credentials

# Flask Secret Key (used for session management)
# This should be a random string, you can generate one using os.urandom(24).hex()
FLASK_SECRET_KEY=your_secret_key_here

# API Keys
# Primary API (reliable for demo)
OPENAI_API_KEY=your_openai_api_key_here

# Groq API Key for LLM
GROQ_API_KEY=your_groq_api_key_here

# Application Settings
FLASK_ENV=development
# Change to 'production' for production deployment

# Debug Mode (set to 'False' in production)
FLASK_DEBUG=True

# Host and Port Settings
# If you need to specify a host and port
# HOST=0.0.0.0
# PORT=5000

# MongoDB Connection Pool Settings
# You can adjust these based on your expected load
MONGODB_MAX_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=10

# Analytics Settings
# Limit for displayed items in analytics
ANALYTICS_TOP_ITEMS_LIMIT=10

# Log Level
LOG_LEVEL=INFO
